<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card shadow">
      <div class="card-header bg-success text-white">
        <h4 class="my-2">My Account</h4>
      </div>
      <div class="card-body">
        <div class="row mb-4">
          <div class="col-md-6">
            <h5>Full Name</h5>
            <p class="lead"><%= current_user.full_name %></p>
          </div>
          <div class="col-md-6">
            <h5>Email</h5>
            <p class="lead"><%= current_user.email %></p>
          </div>
        </div>
        
        <div class="row mb-4">
          <div class="col-md-6">
            <h5>USF ID</h5>
            <p class="lead"><%= current_user.u_number %></p>
          </div>
          <div class="col-md-6">
            <h5>Phone Number</h5>
            <p class="lead"><%= current_user.phone || "Not provided" %></p>
          </div>
        </div>
        
        <div class="row mb-4">
          <div class="col-md-6">
            <h5>Account Type</h5>
            <p class="lead"><%= current_user.role.titleize %></p>
          </div>
          <div class="col-md-6">
            <h5>Joined</h5>
            <p class="lead"><%= current_user.created_at.strftime('%B %d, %Y') %></p>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <div class="d-flex justify-content-between">
          <%= link_to "Back", :back, class: "btn btn-outline-secondary" %>
          <%= link_to "Edit Account", account_edit_path, class: "btn btn-outline-success" %>
        </div>
      </div>
    </div>
  </div>
</div>