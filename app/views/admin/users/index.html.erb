<!-- app/views/admin/users/index.html.erb -->
<div class="card shadow">
  <div class="card-header bg-success text-white">
    <h4 class="my-2">Manage Drivers</h4>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @drivers.each do |driver| %>
            <tr>
              <td>
                <% if driver.avatar.attached? %>
                  <%= image_tag driver.avatar.variant(resize_to_limit: [50, 50]), class: "rounded-circle" %>
                <% else %>
                  <div class="rounded-circle bg-light d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                    <i class="fas fa-user text-secondary"></i>
                  </div>
                <% end %>
              </td>
              <td><%= driver.full_name %></td>
              <td><%= driver.email %></td>
              <td><%= driver.phone || "Not provided" %></td>
              <td>
                <%= link_to "Edit", edit_admin_user_path(driver), class: "btn btn-sm btn-outline-primary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>