<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow">
      <div class="card-header bg-success text-white">
        <h4 class="my-2">Log In</h4>
      </div>
      <div class="card-body">
        <%= form_with url: login_path, method: :post do |f| %>
          <div class="mb-3">
            <%= f.label :email, "USF Email", class: "form-label" %>
            <%= f.email_field :email, class: "form-control", placeholder: "username@usf.edu", required: true, autocomplete: "email" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, class: "form-control", required: true, autocomplete: "current-password" %>
          </div>

          <div class="d-grid">
            <%= f.submit "Log In", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer text-center">
        <p class="mb-0">Don't have an account? <%= link_to "Sign Up", signup_path %></p>
      </div>
    </div>
  </div>
</div>